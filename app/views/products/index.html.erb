 <% @products.each do |product| %>
 <div class="col-xs-12 col-sm-3">

    <div class="row-fluid">
            <div class="thumbnails">
              <div class="span3">
                <div class="thumbnail">
                  <%=link_to image_tag(product.image.url(:medium)), product.image.url(:large), :popup => ['original_image', 'height=700,width=900'] %>
                  <div class="caption">
                    <h3><%= product.title %></h3>
                    <p><%= product.content.truncate(100)%>...  <%= link_to 'read more', product_path(product.id) %> </p>
                    <p><%= link_to "Edit", edit_product_path(product.id), :class => "btn btn-primary" %> <%= link_to 'delete', product_path(product.id), :class => "btn btn-danger", method: "DELETE", data: {confirm: 'Delete this data ? '} %></p>
                  </div>
                </div>
              </div>
              </div>
      </div>
      </div>

<% end %>